    <Style x:Key="StationListViewStyle"  TargetType="ListViewItem">
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Height" Value="70" />
        <Setter Property="Width" Value="290" />
